{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Execute",
      "group": "build",
      "type": "shell",
      "command": "make default",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Debug",
      "group": "build",
      "type": "shell",
      "command": "make clean; make build",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Clean",
      "group": "build",
      "type": "shell",
      "command": "make clean",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}